{
	"Version": "2012-10-17",
	"Statement": [{
		"Effect": "Allow",
		"Action": [
			"dynamodb:PutItem",
			"dynamodb:GetItem",
			"dynamodb:Query",
			"dynamodb:UpdateItem",
			"logs:CreateLogGroup",
			"logs:CreateLogStream",
			"logs:PutLogEvents"
		],
		"Resource": [
			"arn:aws:dynamodb:%REGION%:%ACCOUNT_ID%:table/%STATUSES_TABLE%",
			"arn:aws:dynamodb:%REGION%:%ACCOUNT_ID%:table/%FOLLOW_TABLE%",
			"arn:aws:logs:%REGION%:%ACCOUNT_ID%:*"
		]
	}]
}